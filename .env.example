# ============================================
# QASIOUN MARKETPLACE BOT CONFIGURATION
# ============================================
# Copy this file to .env and update the values

# ============================================
# NODE.JS CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3355

# ============================================
# MCP (Model Context Protocol) CONFIGURATION
# ============================================
# Set to 'true' to enable MCP Agent with direct database access
# Set to 'false' or omit to use legacy API-based search
USE_MCP_AGENT=true

# PostgreSQL connection for MCP (Qasioun Marketplace Database)
# This is the main marketplace database with listings, categories, etc.
MCP_DATABASE_URL=postgresql://user:password@host:5432/qasioun_marketplace_db

# ============================================
# AI PROVIDER CONFIGURATION
# ============================================
# Primary AI provider: 'openai' or 'anthropic'
# For MCP mode, Anthropic (Claude) is recommended
AI_PROVIDER=anthropic

# Anthropic API Configuration (Required for MCP mode)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MODEL_FAST=claude-3-haiku-20240307
ANTHROPIC_MODEL_POWERFUL=claude-3-5-sonnet-20241022

# OpenAI API Configuration (Required for voice transcription)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_FAST=gpt-4o-mini
OPENAI_MODEL=gpt-4o
OPENAI_MODEL_POWERFUL=gpt-4o

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# WHATSAPP BUSINESS API CONFIGURATION
# ============================================
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here

# ============================================
# KASIOON MARKETPLACE API (Legacy Mode)
# ============================================
# Only used when USE_MCP_AGENT=false
KASIOON_API_URL=https://your-api-domain.com:3850
KASIOON_API_KEY=your_jwt_token_here
KASIOON_API_LANGUAGE=ar
KASIOON_WEBSITE_URL=https://kasioon.com

# ============================================
# LOCAL DATABASE (Search History)
# ============================================
# This is for storing search history, NOT the marketplace data
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8npassword
DATABASE_URL=postgresql://n8n:n8npassword@postgres:5432/n8n

# ============================================
# REDIS CACHE CONFIGURATION
# ============================================
REDIS_URL=redis://redis:6379
DISABLE_CACHE=false

# ============================================
# CACHING CONFIGURATION
# ============================================
# Cache TTLs (in seconds)
SEARCH_CACHE_TTL=300
STRUCTURE_CACHE_TTL=1800
AI_RESPONSE_CACHE_TTL=3600
POPULAR_SEARCH_CACHE_TTL=900

# ============================================
# LOGGING & RATE LIMITING
# ============================================
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# SSL CONFIGURATION
# ============================================
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
